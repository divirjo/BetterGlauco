{
    "version": 2,
    "name": "vercel_build_staticfiles",
    "regions": ["sa-east-1"],
    "builds": [
        {
            "src": "BetterGlauco/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
          "src": "vercel_build_files.sh",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "staticfiles_build"
            }
          }
    ],
    "routes": [
        {
          "src": "/static/(.*)",
          "dest": "/static/$1"
        },
        {
          "src": "/(.*)",
          "dest": "BetterGlauco/wsgi.py"
        }
      ],
    "functions": {
        "app/api/**/*": {
          "maxDuration": 20 
        }
      }
}
